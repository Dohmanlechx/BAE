<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dohman.boilaneggbae.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="447dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/egg1" />

    <Button
        android:id="@+id/buttonMediumSize"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="@string/text_sizemedium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonSoft"
        app:layout_constraintStart_toStartOf="@+id/buttonSoft"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonLargeSize"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:fontFamily="casual"
        android:text="@string/text_sizelarge"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMediumSize"
        app:layout_constraintEnd_toEndOf="@+id/buttonSoft" />

    <Button
        android:id="@+id/buttonSoft"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:fontFamily="casual"
        android:text="@string/text_soft"
        app:layout_constraintBottom_toTopOf="@+id/buttonMedium"
        app:layout_constraintStart_toStartOf="@+id/buttonMedium" />

    <Button
        android:id="@+id/buttonMedium"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="@string/text_medium"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.459" />

    <Button
        android:id="@+id/buttonHard"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:fontFamily="casual"
        android:text="@string/text_hard"
        app:layout_constraintStart_toStartOf="@+id/buttonMedium"
        app:layout_constraintTop_toBottomOf="@+id/buttonMedium" />

    <Button
        android:id="@+id/buttonHellaHard"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:fontFamily="casual"
        android:text="@string/text_hellahard"
        app:layout_constraintStart_toStartOf="@+id/buttonMedium"
        app:layout_constraintTop_toBottomOf="@+id/buttonHard" />

    <TextView
        android:id="@+id/time"
        android:layout_width="248dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/buttonHard"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/textViewRisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="casual"
        android:text="@string/text_risk"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonHellaHard"
        app:layout_constraintTop_toBottomOf="@+id/buttonHellaHard" />

    <TextView
        android:id="@+id/textViewChooseSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="casual"
        android:text="@string/text_choosesize"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/buttonMediumSize" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="23dp"
        android:layout_height="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonHellaHard"
        app:layout_constraintStart_toEndOf="@+id/buttonHellaHard"
        app:srcCompat="@drawable/arrow" />

    <RadioButton
        android:id="@+id/buttonInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="@string/text_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGame"
        android:layout_width="61dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popupMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSoft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/popup_message"
        android:textSize="20sp"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>
